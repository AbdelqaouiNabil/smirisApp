{
  "name": "germansphere-backend",
  "version": "1.0.0",
  "description": "Germansphere SaaS Backend - Node.js + Express + TypeScript + PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:init": "ts-node src/database/init.ts",
    "db:seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.5",
    "stripe": "^15.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.5",
    "@types/react": "^19.1.8",
    "@types/react-router-dom": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "saas",
